# Mental Health LLM Evaluation - Environment Configuration
# =======================================================
# Simplified configuration for capstone project
#
# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace placeholder values with your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local LLM Server Configuration (Shared by DeepSeek and Gemma)
LOCAL_LLM_SERVER=192.168.86.23:1234
LOCAL_LLM_TIMEOUT=60.0

# Model identifiers on the local server
DEEPSEEK_MODEL=deepseek/deepseek-r1-0528-qwen3-8b
DEEPSEEK_MODEL_NAME=deepseek/deepseek-r1-0528-qwen3-8b
DEEPSEEK_API_BASE=http://192.168.86.23:1234/v1

GEMMA_MODEL=google/gemma-3-12b
GEMMA_MODEL_NAME=google/gemma-3-12b
GEMMA_API_BASE=http://192.168.86.23:1234/v1

# Project Directory Structure
PROJECT_ROOT=.
DATA_DIR=data
OUTPUT_DIR=output
CONFIG_DIR=config
LOGS_DIR=output/logs

# Evaluation Settings
EVALUATION_OUTPUT_DIR=output
EVALUATION_LOG_LEVEL=INFO
SAVE_CONVERSATIONS=true
GENERATE_VISUALIZATIONS=true

# File Paths
SCENARIOS_DIR=data/scenarios
EVALUATIONS_DIR=output/evaluations
ANALYSIS_DIR=output/analysis
VISUALIZATIONS_DIR=output/visualizations
CONVERSATIONS_DIR=output/conversations