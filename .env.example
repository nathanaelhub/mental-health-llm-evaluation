# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# DeepSeek Configuration
DEEPSEEK_MODEL_PATH=/path/to/deepseek/model
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Model Configuration
DEFAULT_MODEL_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000
DEFAULT_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mental_health_llm
MONGODB_URI=mongodb://localhost:27017/mental_health_llm

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log

# Data Storage
DATA_DIR=./data
RESULTS_DIR=./data/results
CONVERSATIONS_DIR=./data/conversations
SCENARIOS_DIR=./data/scenarios

# Evaluation Configuration
EVALUATION_BATCH_SIZE=10
MAX_CONVERSATION_LENGTH=20
EVALUATION_TIMEOUT=60

# Statistical Analysis
SIGNIFICANCE_LEVEL=0.05
CONFIDENCE_INTERVAL=0.95
MIN_SAMPLE_SIZE=30

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring and Observability
PROMETHEUS_PORT=8000
ENABLE_METRICS=true
ENABLE_TRACING=false

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_APIS=false

# Rate Limiting
OPENAI_RATE_LIMIT=60
DEEPSEEK_RATE_LIMIT=100
REQUEST_TIMEOUT=30

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
ENABLE_CACHING=true

# Experimental Features
ENABLE_EXPERIMENTAL_METRICS=false
ENABLE_ADVANCED_ANALYSIS=false
ENABLE_REAL_TIME_EVALUATION=false