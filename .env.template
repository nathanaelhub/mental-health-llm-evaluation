# Mental Health LLM Evaluation - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type: development, production, or testing
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Application version
VERSION=1.0.0

# =============================================================================
# API KEYS AND CREDENTIALS
# =============================================================================

# OpenAI Configuration (REQUIRED for OpenAI model)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_organization_id_here

# DeepSeek Configuration (REQUIRED if using DeepSeek API)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# MODEL PATHS AND CONFIGURATION
# =============================================================================

# DeepSeek Local Model Path (REQUIRED for local model)
DEEPSEEK_MODEL_PATH=/path/to/your/deepseek/model

# Model device preference (auto, cuda, cpu)
MODEL_DEVICE=auto

# =============================================================================
# DIRECTORY PATHS
# =============================================================================

# Base data directory
DATA_DIR=./data

# Output directory for results
OUTPUT_DIR=./output

# Scenarios directory
SCENARIOS_DIR=./data/scenarios

# Logs directory
LOG_DIR=./logs

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path
DB_PATH=./data/evaluation.db

# Database connection string (for other databases)
DATABASE_URL=sqlite:///./data/evaluation.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (standard, detailed, json)
LOG_FORMAT=standard

# Log file path
LOG_FILE=./logs/evaluation.log

# Enable structured logging (true/false)
ENABLE_STRUCTURED_LOGGING=false

# =============================================================================
# EXPERIMENT CONFIGURATION
# =============================================================================

# Number of conversations to generate per model
CONVERSATION_COUNT=5

# Scenario suite to use (basic, comprehensive, safety, empathy)
SCENARIO_SUITE=comprehensive

# Number of conversations per scenario
CONVERSATIONS_PER_SCENARIO=2

# Random seed for reproducibility (optional)
RANDOM_SEED=42

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum parallel workers
MAX_PARALLEL_WORKERS=4

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum response time threshold (milliseconds)
MAX_RESPONSE_TIME_MS=5000

# Target throughput (requests per second)
TARGET_THROUGHPUT_RPS=10

# =============================================================================
# EVALUATION THRESHOLDS
# =============================================================================

# Production readiness threshold (0-100)
PRODUCTION_READY_THRESHOLD=80

# Clinical readiness threshold (0-100)
CLINICAL_READY_THRESHOLD=90

# Research acceptable threshold (0-100)
RESEARCH_ACCEPTABLE_THRESHOLD=70

# Minimum viable threshold (0-100)
MINIMUM_VIABLE_THRESHOLD=60

# Minimum safety score required (0-100)
MIN_SAFETY_SCORE=80

# =============================================================================
# STORAGE AND BACKUP
# =============================================================================

# Storage type (file, sqlite, memory)
STORAGE_TYPE=file

# Enable data backups (true/false)
BACKUP_ENABLED=true

# Data cleanup period (days)
CLEANUP_DAYS=30

# Enable compression (true/false)
COMPRESSION_ENABLED=false

# =============================================================================
# SECURITY AND PRIVACY
# =============================================================================

# Encrypt data at rest (true/false)
ENCRYPT_AT_REST=false

# Encrypt data in transit (true/false)
ENCRYPT_IN_TRANSIT=true

# Mask sensitive data in logs (true/false)
MASK_SENSITIVE_DATA=true

# Anonymize conversations (true/false)
ANONYMIZE_CONVERSATIONS=true

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Enable health checks (true/false)
ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300

# Enable performance metrics (true/false)
ENABLE_METRICS=true

# Metrics export interval (seconds)
METRICS_EXPORT_INTERVAL=60

# Enable alerting (true/false)
ENABLE_ALERTS=false

# Alert on failures (true/false)
ALERT_ON_FAILURES=true

# Minimum score for alerting
MIN_ALERT_SCORE=70

# =============================================================================
# STATISTICAL ANALYSIS
# =============================================================================

# Significance level for statistical tests
ALPHA=0.05

# Confidence level for confidence intervals
CONFIDENCE_LEVEL=0.95

# Minimum sample size for statistical analysis
MIN_SAMPLE_SIZE=5

# Apply Bonferroni correction (true/false)
BONFERRONI_CORRECTION=false

# =============================================================================
# VISUALIZATION AND REPORTING
# =============================================================================

# Generate visualizations (true/false)
GENERATE_VISUALIZATIONS=true

# Create summary reports (true/false)
CREATE_SUMMARY_REPORT=true

# Export formats (comma-separated: json,csv,parquet,xlsx)
EXPORT_FORMATS=json,csv

# Visualization format (png, svg, pdf)
VISUALIZATION_FORMAT=png

# Visualization DPI
VISUALIZATION_DPI=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode for models (true/false)
MODEL_DEBUG=false

# Mock external APIs for testing (true/false)
MOCK_EXTERNAL_APIS=false

# Enable development tools (true/false)
ENABLE_DEV_TOOLS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Enable audit logging (true/false)
AUDIT_LOGGING=false

# Require authentication (true/false)
REQUIRE_AUTHENTICATION=false

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=false

# Rate limit per minute
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# Elasticsearch URL (for search)
ELASTICSEARCH_URL=http://localhost:9200

# Prometheus metrics endpoint
PROMETHEUS_URL=http://localhost:9090

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add any custom environment variables below
# CUSTOM_SETTING=value