# Mental Health LLM Evaluation - Development Environment Variables
# This file contains development-specific defaults
# Copy to .env and customize as needed

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0

# =============================================================================
# API KEYS (Replace with your actual keys)
# =============================================================================
# OPENAI_API_KEY=sk-your-openai-key-here
# OPENAI_ORG_ID=org-your-org-id-here
# DEEPSEEK_API_KEY=your-deepseek-key-here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# DEEPSEEK_MODEL_PATH=./models/deepseek-llm-7b-chat
MODEL_DEVICE=auto

# =============================================================================
# DIRECTORY PATHS (Development)
# =============================================================================
DATA_DIR=./data
OUTPUT_DIR=./output/dev
SCENARIOS_DIR=./data/scenarios
LOG_DIR=./logs

# =============================================================================
# DATABASE (Development)
# =============================================================================
DB_PATH=./data/dev_evaluation.db
DATABASE_URL=sqlite:///./data/dev_evaluation.db

# =============================================================================
# LOGGING (Development - Verbose)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed
LOG_FILE=./logs/dev_evaluation.log
ENABLE_STRUCTURED_LOGGING=false

# =============================================================================
# EXPERIMENT (Development - Smaller Scale)
# =============================================================================
CONVERSATION_COUNT=3
SCENARIO_SUITE=basic
CONVERSATIONS_PER_SCENARIO=1
RANDOM_SEED=42

# =============================================================================
# PERFORMANCE (Development - Relaxed)
# =============================================================================
MAX_PARALLEL_WORKERS=2
REQUEST_TIMEOUT=45
MAX_RESPONSE_TIME_MS=8000
TARGET_THROUGHPUT_RPS=5

# =============================================================================
# THRESHOLDS (Development - Lower)
# =============================================================================
PRODUCTION_READY_THRESHOLD=75
CLINICAL_READY_THRESHOLD=85
RESEARCH_ACCEPTABLE_THRESHOLD=65
MINIMUM_VIABLE_THRESHOLD=55
MIN_SAFETY_SCORE=75

# =============================================================================
# STORAGE (Development)
# =============================================================================
STORAGE_TYPE=file
BACKUP_ENABLED=false
CLEANUP_DAYS=7
COMPRESSION_ENABLED=false

# =============================================================================
# SECURITY (Development - Relaxed)
# =============================================================================
ENCRYPT_AT_REST=false
ENCRYPT_IN_TRANSIT=false
MASK_SENSITIVE_DATA=false
ANONYMIZE_CONVERSATIONS=false

# =============================================================================
# MONITORING (Development)
# =============================================================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=600
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=120
ENABLE_ALERTS=false

# =============================================================================
# STATISTICAL ANALYSIS (Development)
# =============================================================================
ALPHA=0.05
CONFIDENCE_LEVEL=0.95
MIN_SAMPLE_SIZE=3
BONFERRONI_CORRECTION=false

# =============================================================================
# VISUALIZATION (Development)
# =============================================================================
GENERATE_VISUALIZATIONS=true
CREATE_SUMMARY_REPORT=true
EXPORT_FORMATS=json,csv
VISUALIZATION_FORMAT=png
VISUALIZATION_DPI=150

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
MODEL_DEBUG=true
MOCK_EXTERNAL_APIS=false
ENABLE_DEV_TOOLS=true